<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" >

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>
    
    <material name="orange">
        <color rgba="1 0.4 0.0 1"/>
    </material>

    <material name="black">
        <color rgba="0.0 0.0 0.0 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <!-- Base footprint -->

    <link name="base_footprint" />

    <joint name="base_joint" type="fixed">

        <parent link="base_footprint"/>
        <child link="base_link"/>
        <origin xyz="0.0 0.0 0.03"/>
        
    </joint> 

    <!-- Base link is your chassis-->

    <link name="base_link">

        <visual>
            <origin xyz="0.0 0.0 0.03"/>
            <geometry>
                <cylinder radius="0.156" length="0.1"/>
            </geometry>
            <material name="black" />
        </visual>
        <collision>
        <origin xyz="0.0 0.0 0.03"/>
            <geometry>
                <cylinder radius="0.158" length="0.1"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.8" radius="0.156" length="0.1">
            <origin xyz="0.0 0.0 0.03" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_cylinder>
        
    </link> 

    <gazebo reference="base_link">
        <material>Gazebo/Black</material>
    </gazebo>

    <!-- Left whell link-->

    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0.0 0.108 0.00" rpy="-${pi/2} 0.0 0.0" />
        <axis xyz="0.0 0.0 1"/>           
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.03" length="0.0145"/>
            </geometry>
            <material name="orange" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.03" length="0.0145"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.15" radius="0.03" length="0.0145">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="left_wheel">
        <material>Gazebo/Orange</material>
    </gazebo>

    <!-- Right whell link-->

    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_wheel"/>
        <origin xyz="0.0 -0.108 0.00" rpy="${pi/2} 0.0 0.0" />
        <axis xyz="0.0 0.0 -1"/>           
    </joint>

    <link name="right_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.03" length="0.0145"/>
            </geometry>
            <material name="orange" />
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.03" length="0.0145"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.15" radius="0.03" length="0.0145">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="right_wheel">
        <material>Gazebo/Orange</material>
    </gazebo>

    <!-- Caster Wheels-->

    <joint name="caster_front_joint" type="fixed">
        <parent link="base_link"/>
        <child link="caster_front_wheel"/>
        <origin xyz="0.125 0.0 -0.01"/>
    </joint>

    <link name="caster_front_wheel">
        <visual>
            <geometry>
                <sphere radius="0.02"/>
            </geometry>
            <material name="orange" />
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.02"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.03" >
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_sphere>    
    </link>

    <gazebo reference="caster_front_wheel">
        <material>Gazebo/Orange</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>

    <joint name="caster_back_joint" type="fixed">
        <parent link="base_link"/>
        <child link="caster_back_wheel"/>
        <origin xyz="-0.125 0.0 -0.01"/>
    </joint>

    <link name="caster_back_wheel">
        <visual>
            <geometry>
                <sphere radius="0.02"/>
            </geometry>
            <material name="orange" />
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.02"/>
            </geometry>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.03" >
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        </xacro:inertial_sphere>    
    </link>

    <gazebo reference="caster_back_wheel">
        <material>Gazebo/Orange</material>
        <mu1 value="0.001"/>
        <mu2 value="0.001"/>
    </gazebo>

</robot>